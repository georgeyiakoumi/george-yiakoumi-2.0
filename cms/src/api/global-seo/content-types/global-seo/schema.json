{
  "kind": "singleType",
  "collectionName": "global_seos",
  "info": {
    "singularName": "global-seo",
    "pluralName": "global-seos",
    "displayName": "Global SEO",
    "description": "Global SEO settings for the entire website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "default": "George Yiakoumi"
    },
    "siteTitle": {
      "type": "string",
      "required": true
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "keywords": {
      "type": "text",
      "description": "Comma-separated keywords"
    },
    "authorName": {
      "type": "string",
      "default": "George Yiakoumi"
    },
    "authorJobTitle": {
      "type": "string",
      "default": "Product Designer"
    },
    "authorBio": {
      "type": "text"
    },
    "linkedinUrl": {
      "type": "string"
    },
    "githubUrl": {
      "type": "string"
    },
    "twitterHandle": {
      "type": "string",
      "description": "Include @ symbol"
    },
    "ogTitle": {
      "type": "string"
    },
    "ogDescription": {
      "type": "text"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "twitterCard": {
      "type": "enumeration",
      "enum": [
        "summary",
        "summary_large_image"
      ],
      "default": "summary_large_image"
    },
    "gtagId": {
      "type": "string"
    },
    "favIcon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "appleTouchIcon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
